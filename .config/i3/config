exec_always --no-startup-id sh -c "gsettings set org.freedesktop.ibus.general engines-order \"['xkb:us::eng', 'xkb:ru::rus']\""
exec_always --no-startup-id sh -c "gsettings set org.freedesktop.ibus.general preload-engines \"['xkb:us::eng', 'xkb:ru::rus']\""
exec_always --no-startup-id sh -c "gsettings set org.freedesktop.ibus.general use-global-engine 'false'"
exec_always --no-startup-id sh -c "gsettings set org.freedesktop.ibus.general use-system-keyboard-layout 'true'"


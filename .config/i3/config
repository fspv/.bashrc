# After-start actions
exec_always --no-startup-id sh -c "xss-lock -- ${HOME}/.config/i3/scripts/lock-screen.sh"
# FIXME: pip3 install i3ipc
exec --no-startup-id sh -c "${HOME}/.config/i3/scripts/window-binded-layout.sh"
exec_always --no-startup-id sh -c "setxkbmap -model pc105 -layout us,ru -option grp:win_space_toggle,grp_led:caps,lv3:lalt_switch,ctrl:nocaps,compose:rwin"

exec_always --no-startup-id sh -c "dunst -layer overlay -config ${HOME}/.dunstrc"
exec --no-startup-id sh -c "volumeicon"

# Run local stuff
exec --no-startup-id sh -c "${HOME}/.config/i3/scripts/local.sh"

set $mod Mod4

# MacOS-like keybinding
bindsym --release Mod4+c exec --no-startup-id xdotool getactivewindow key --clearmodifiers --delay 0 Ctrl+Insert key --delay 0 Super_L
bindsym --release Mod4+x exec --no-startup-id xdotool getactivewindow key --clearmodifiers --delay 0 Shift+Delete key --delay 0 Super_L
bindsym --release Mod4+v exec --no-startup-id xdotool getactivewindow key --clearmodifiers --delay 0 Shift+Insert key --delay 0 Super_L
bindsym --release Mod4+t exec --no-startup-id xdotool getactivewindow key --clearmodifiers --delay 0 Ctrl+t key --delay 0 Super_L
bindsym --release Mod4+y exec --no-startup-id xdotool getactivewindow key --clearmodifiers --delay 0 Ctrl+h key --delay 0 Super_L
bindsym --release Mod4+w exec --no-startup-id xdotool getactivewindow key --clearmodifiers --delay 0 Ctrl+w key --delay 0 Super_L

# Tune volume
bindsym XF86AudioRaiseVolume exec amixer -q set Master 2dB+ unmute
bindsym XF86AudioLowerVolume exec amixer -q set Master 2dB- unmute
bindsym XF86AudioMute exec amixer -D pulse set Master 1+ toggle


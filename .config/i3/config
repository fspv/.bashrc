# PrintScr
bindsym Print exec flameshot full -p ${HOME}/Pictures
bindsym Shift+Print exec flameshot gui -p ${HOME}/Pictures

# Switch language with Super + Space (to match macos)
bindsym $mod+space exec ${HOME}/.config/i3/scripts/xkblayout-state set +1

# Disable mouse warping (jump when you switch to new window/workspace)
mouse_warping none

# Disable change focus by moving mouse to new window
focus_follows_mouse no

font pango:Ubuntu Mono 11

# Lock screen
bindsym Mod1+Control+l exec ${HOME}/.config/i3/scripts/lock-screen.sh
bindsym $mod+Control+l exec ${HOME}/.config/i3/scripts/lock-screen.sh

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
bindsym $mod+d exec "rofi -combi-modi window,drun,run,ssh,keys -show combi -terminal terminator -sort -sorting-method fzf -show-icons -matching fuzzy -pid /tmp/${USER}_i3wm_rofi.pid"

